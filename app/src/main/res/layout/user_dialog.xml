<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="400dp"
        android:layout_height="wrap_content"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
            android:id="@+id/userAbstract"
            android:layout_width="400dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

        <ImageView
                android:id="@+id/profileicon"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_gravity="center"
                android:background="@drawable/ic_phone" />


        <LinearLayout

                android:id="@+id/nameAndRate"
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/name"
                    android:layout_width="100dp"
                    android:layout_height="50dp"


                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="2sp"

                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:text="하계동 맘스터치"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/level"
                    android:layout_width="100dp"
                    android:layout_height="20dp"


                    android:gravity="center_vertical"
                    android:text="Level : 344"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/totalWinRate"
                        android:layout_width="50dp"
                        android:layout_height="25dp"



                        android:layout_weight="1"

                        android:autoSizeMaxTextSize="12sp"

                        android:autoSizeMinTextSize="2sp"
                        android:autoSizeTextType="uniform"
                        android:text="54.4%"

                        />

                <TextView
                        android:id="@+id/totalKDA"
                        android:layout_width="50dp"
                        android:layout_height="25dp"

                        android:layout_weight="1"

                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center_horizontal"
                        android:text="KDA: 3.14"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.794"
                        app:layout_constraintStart_toStartOf="@+id/totalWinRate"
                        app:layout_constraintTop_toBottomOf="@+id/level" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp">

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/top" />

                <TextView
                        android:id="@+id/topfeature"
                        android:layout_width="45dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:text="Offensive"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/topwinrate"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='25%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/topkda"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='10%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/jungle" />
                <TextView
                        android:id="@+id/junglefeature"
                        android:layout_width="45dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:text="Offensive"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/junglewinrate"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='25%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/junglekda"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='10%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/middle" />
                <TextView
                        android:id="@+id/middlefeature"
                        android:layout_width="45dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:text="Offensive"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/middlewinrate"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='25%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/middlekda"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='10%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bottom" />
                <TextView
                        android:id="@+id/bottomfeature"
                        android:layout_width="45dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:text="Offensive"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/bottomwinrate"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='25%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/bottomkda"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='10%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/support" />
                <TextView
                        android:id="@+id/supportfeature"
                        android:layout_width="45dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:text="Offensive"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/supportwinrate"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='25%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
                <TextView
                        android:layout_width="10dp"
                        android:layout_height="25dp"
                        android:text=" / "/>
                <TextView
                        android:id="@+id/supportkda"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:text='10%'
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeMinTextSize="2sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>