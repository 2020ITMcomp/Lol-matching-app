<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.History">
<LinearLayout
        android:id="@+id/Linear_total"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/blue">
    <LinearLayout
            android:id="@+id/Linear_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
        <TextView
                android:id="@+id/winlose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="승패"
                android:gravity="center"
                android:textSize="15dp" />
        <TextView
                android:id="@+id/gameduration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "게임길이"
                android:textSize="10dp"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/champion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/image"
            android:layout_gravity="center"/>


    <LinearLayout
            android:id="@+id/Linear_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


        <LinearLayout
                android:id="@+id/Linear_second_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/kill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kill /" />

            <TextView
                    android:id="@+id/death"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="death /" />

            <TextView
                    android:id="@+id/assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="assist" />


        </LinearLayout>
        <LinearLayout
                android:id="@+id/Linear_second_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/kda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kda"
                    android:gravity="center"/>
            <TextView
                    android:id="@+id/killspring"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="killspring"
                    android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/Linear_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp">
        <TextView
                android:id="@+id/level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="level"
                android:gravity="center"/>
        <TextView
                android:id="@+id/cs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cs"
                android:gravity="center"/>
        <TextView
                android:id="@+id/gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gold or something"
                android:gravity="center"/>

    </LinearLayout>

</LinearLayout>





</FrameLayout>